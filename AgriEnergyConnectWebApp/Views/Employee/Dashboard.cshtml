@model List<Farmer>
@{
    ViewBag.Title = "Employee Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Dashboard - AgriEnergyConnectWebApp</title>

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnectWebApp.styles.css" asp-append-version="true" />
 </head>

<!--
   Adapted from W3Schools
   URL: https://www.w3schools.com/howto/howto_css_cards.asp
-->

<body>
    <div class="container py-4">
        <div class="dashboard-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary">Employee Dashboard</h2>
            <a href="/Employee/AddFarmer" class="form-submit-btn">+ Add Farmer</a>
        </div>

        <div class="farmer-grid">
            @foreach (var f in Model)
            {
                <div class="farmer-card" onclick="window.location.href='/Employee/ViewProducts?farmerId=@f.FarmerId'">
                    <div class="farmer-card-content">
                        <div class="farmer-name">@f.FullName</div>
                        <div class="farmer-actions">
                            <a href="/Employee/ViewProducts?farmerId=@f.FarmerId" class="form-submit-btn">View Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="back-button-container">
            <a href="@Url.Action("Index", "Home")" class="form-submit-btn">← Back to Home</a>
        </div>

    </div>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
